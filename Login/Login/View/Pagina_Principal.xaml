<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Login.View.Pagina_Principal">
    <ContentPage.Content>
        <StackLayout Padding="40">

            <Label Text="Usuario:" />
            <Label Text="{Binding FullName}" />


            <Button Text="Paquetes" x:Name="btnPaquetes" Clicked="btn_Paquetes"/>
            
            <Button Text="Entradas" x:Name="btnEntradas" Clicked="btn_Entradas"/>

            <Button Text="Cerrar Sesion" x:Name="btnCerrar" Clicked="btn_Cerrar"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>